generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
}

model Note {
  id        String   @id
  title     String
  content   String
  category  String   @default("Personal")
  createdAt DateTime @default(now())
  updatedAt DateTime
  authorId  String
}

model SharedNote {
  id        String   @id
  noteId    String
  userId    String
  createdAt DateTime @default(now())

  @@unique([noteId, userId])
}
